{
	"name": "@chantouchsek/amazing-admin",
	"private": true,
	"packageManager": "pnpm@8.15.4",
	"type": "module",
	"engines": {
		"node": ">=18",
		"npm": "use-pnpm-instead",
		"pnpm": ">=8",
		"yarn": "use-pnpm-instead"
	},
	"scripts": {
		"build": "nuxt build",
		"dev": "nuxt dev",
		"generate": "nuxt generate",
		"postinstall": "nuxt prepare",
		"lint": "pnpm lint:js && pnpm lint:style && pnpm lint:prettier",
		"lint:fix": "prettier --write --list-different . && pnpm lint:js --fix && pnpm lint:style --fix",
		"lint:js": "eslint . --cache",
		"lint:prettier": "prettier --check .",
		"lint:style": "stylelint '**/*.{css,scss,sass,vue}' --ignore-path .gitignore",
		"prepare": "husky",
		"preview": "nuxt preview"
	},
	"lint-staged": {
		"*.{js,ts,vue}": "eslint --cache",
		"*.{css,scss,sass,vue}": "stylelint",
		"*.**": "prettier --check --ignore-unknown"
	},
	"dependencies": {
		"@nuxt-alt/auth": "^3.1.6",
		"@nuxt-alt/http": "^1.7.10",
		"@pinia/colada": "^0.5.3",
		"@vee-validate/zod": "^4.12.5",
		"pinia": "^2.1.7",
		"vee-validate": "^4.12.5",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.0.3",
		"@commitlint/config-conventional": "^19.0.3",
		"@date-io/dayjs": "^3.0.0",
		"@nuxt/fonts": "^0.0.2",
		"@nuxtjs/color-mode": "^3.3.2",
		"@nuxtjs/i18n": "^8.1.1",
		"@nuxtjs/robots": "^3.0.0",
		"@nuxtjs/sitemap": "^5.1.2",
		"@pinia/nuxt": "^0.5.1",
		"@so1ve/eslint-config": "^2.0.0",
		"@so1ve/prettier-config": "^2.0.0",
		"@unocss/nuxt": "^0.58.5",
		"@vee-validate/nuxt": "^4.12.5",
		"@vue-macros/nuxt": "^1.9.21",
		"@vueuse/nuxt": "^10.9.0",
		"dayjs-nuxt": "^2.1.9",
		"eslint": "^8.57.0",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.2",
		"nuxt": "^3.10.3",
		"prettier": "^3.2.5",
		"stylelint": "^16.2.1",
		"stylelint-config-prettier": "^9.0.5",
		"stylelint-config-recommended-vue": "^1.5.0",
		"stylelint-config-standard": "^36.0.0",
		"typescript": "^5.4.2",
		"vue": "^3.4.21",
		"vue-eslint-parser": "^9.4.2",
		"vue-router": "^4.3.0",
		"vue-tsc": "^1.8.27",
		"vuetify-nuxt-module": "^0.12.0"
	}
}
